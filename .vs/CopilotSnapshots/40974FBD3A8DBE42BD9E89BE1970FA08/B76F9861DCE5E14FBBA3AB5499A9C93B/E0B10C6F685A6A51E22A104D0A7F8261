import { apiFetch } from './api';

export async function fetchDiemDanh() {
  return apiFetch('/api/diem-danh');
}

export async function registerDiemDanh(id_hd_tham_du, anh_minh_chung) {
  return apiFetch('/api/diem-danh', {
    method: 'POST',
    body: JSON.stringify({ id_hd_tham_du, anh_minh_chung })
  });
}

export async function cancelDiemDanh(id) {
  return apiFetch(`/api/diem-danh/${id}`, {
    method: 'DELETE'
  });
}
