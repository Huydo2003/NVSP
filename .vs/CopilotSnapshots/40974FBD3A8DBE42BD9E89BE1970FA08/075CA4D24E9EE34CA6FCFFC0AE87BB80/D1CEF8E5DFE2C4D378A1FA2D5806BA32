import React, { useState, useEffect, useCallback, useMemo } from 'react';
import toast from 'react-hot-toast';

import { useApp } from '../hooks/useApp';
import { fetchHoatDongThamDu } from '../services/hoat-dong-tham-du';
import { fetchDkiThamDu } from '../services/dki-tham-du';
import { fetchDiemDanh, registerDiemDanh, cancelDiemDanh } from '../services/diem-danh';

const getTrangThaiColor = (trang_thai) => {
  if (trang_thai === 1) return 'text-green-600 bg-green-50 border-green-200';
  if (trang_thai === -1) return 'text-red-600 bg-red-50 border-red-200';
  return 'text-yellow-600 bg-yellow-50 border-yellow-200';
};

const getTrangThaiText = (trang_thai) => {
  if (trang_thai === 1) return 'Đã duyệt';
  if (trang_thai === -1) return 'Từ chối';
  return 'Chờ duyệt';
};

export default function DiemDanhStudent({ user: propUser = null }) {
  const [hdtdList, setHdtdList] = useState([]);
  const [dkiRegs, setDkiRegs] = useState([]);
  const [diemDanhRegs, setDiemDanhRegs] = useState([]);
  const [loading, setLoading] = useState(true);
  const [isSubmitting, setIsSubmitting] = useState(false);

  const [showDiemDanhModal, setShowDiemDanhModal] = useState(false);
  const [selectedHdtd, setSelectedHdtd] = useState(null);
  const [imageData, setImageData] = useState(null);
  const [manualMaSv, setManualMaSv] = useState('');

  // get app config & current user from context if available
  let appCtx;
  try {
    appCtx = useApp();
  } catch (err) {
    appCtx = { state: { config: { accent_color: '#4f46e5', text_color: '#1e3a8a' } } };
  }

  const { state } = appCtx;
  const config = (state && state.config) ? state.config : { accent_color: '#4f46e5', text_color: '#1e3a8a' };
  const user = propUser || (state && state.user) || null;

  const activitiesForAttendance = useMemo(() => {
    if (!hdtdList.length || !dkiRegs.length) return [];

    return hdtdList
      .filter(hdtd => hdtd.yeu_cau_diem_danh)
      .map(hdtd => {
        // dkiRegs are registrations for the current authenticated user (server returns user's registrations)
        const registration = dkiRegs.find(d => d.id_hd === hdtd.id_hd_tham_du && d.trang_thai === 1);
        const attendance = diemDanhRegs.find(dd => dd.id_hd === hdtd.id_hd_tham_du);
        if (!registration) return null;
        return { ...hdtd, isRegistered: !!registration, attendance: attendance || null };
      })
      .filter(Boolean)
      .sort((a, b) => a.id_hd_tham_du - b.id_hd_tham_du);
  }, [hdtdList, dkiRegs, diemDanhRegs]);

  const refreshData = useCallback(async () => {
    setLoading(true);
    try {
      const [hdtdData, dkiData, diemDanhData] = await Promise.all([
        fetchHoatDongThamDu(),
        fetchDkiThamDu(),
        fetchDiemDanh(),
      ]);
      setHdtdList(hdtdData || []);
      setDkiRegs(dkiData || []);
      setDiemDanhRegs(diemDanhData || []);
    } catch (err) {
      console.error('Lỗi tải dữ liệu:', err);
      toast.error('Không thể tải dữ liệu điểm danh.');
    } finally {
      setLoading(false);
    }
  }, []);

  useEffect(() => {
    refreshData();
  }, [refreshData]);

  const handleImageUpload = (event) => {
    const file = event.target.files && event.target.files[0];
    if (!file) return;
    if (file.size > 2 * 1024 * 1024) {
      toast.error('Kích thước ảnh không được vượt quá 2MB');
      setImageData(null);
      event.target.value = null;
      return;
    }
    const reader = new FileReader();
    reader.onloadend = () => setImageData(reader.result);
    reader.readAsDataURL(file);
  };

  const handleDiemDanh = async (e) => {
    e.preventDefault();

    if (!selectedHdtd || !imageData) {
      toast.error('Vui lòng chọn hoạt động và tải lên ảnh minh chứng.');
      return;
    }

    setIsSubmitting(true);
    try {
      // If manualMaSv provided, send it; otherwise server will use authenticated user
      const maSvPayload = manualMaSv && String(manualMaSv).trim() ? String(manualMaSv).trim() : undefined;
      await registerDiemDanh(selectedHdtd.id_hd_tham_du, imageData, maSvPayload);
      toast.success('Điểm danh thành công! Chờ duyệt.');
      setShowDiemDanhModal(false);
      setImageData(null);
      setManualMaSv('');
      await refreshData();
    } catch (err) {
      console.error('Lỗi điểm danh:', err);
      toast.error((err && err.message) || 'Lỗi khi điểm danh.');
    } finally {
      setIsSubmitting(false);
    }
  };

  const handleCancelDiemDanh = async (attendanceId) => {
    if (!attendanceId) return;
    if (!window.confirm('Bạn có chắc muốn hủy điểm danh này?')) return;
    try {
      await cancelDiemDanh(attendanceId);
      toast.success('Hủy điểm danh thành công.');
      await refreshData();
    } catch (err) {
      console.error('Lỗi hủy điểm danh:', err);
      toast.error((err && err.message) || 'Lỗi khi hủy điểm danh.');
    }
  };

  if (loading) {
    return (
      <div className="p-8 text-center text-gray-500">
        <div className="animate-spin inline-block w-6 h-6 border-4 border-t-transparent border-blue-500 rounded-full"></div>
        <p className="mt-2">Đang tải dữ liệu...</p>
      </div>
    );
  }

  const AttendanceModal = ({ isOpen, onClose, activity }) => {
    const handleClose = () => { setManualMaSv(''); setImageData(null); onClose(); };

    return (
      <div className={`fixed inset-0 z-50 overflow-y-auto ${isOpen ? '' : 'hidden'}`}>
        <div className="flex items-center justify-center min-h-screen px-4 text-center">
          <div className="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onClick={handleClose}></div>
          <div className="inline-block w-full max-w-md p-6 my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl rounded-lg">
            <h3 className="text-lg font-medium leading-6 text-gray-900 border-b pb-3 mb-4">Điểm Danh: {activity?.ten_hd}</h3>
            <form onSubmit={handleDiemDanh} className="space-y-4">

              <div>
                <label htmlFor="ma_sv" className="block text-sm font-medium text-gray-700">Mã sinh viên (tùy chọn)</label>
                <input
                  id="ma_sv"
                  type="text"
                  value={manualMaSv}
                  onChange={(e) => setManualMaSv(e.target.value)}
                  placeholder={user && user.ma_sv ? `Mặc định: ${user.ma_sv}` : 'Nhập Mã sinh viên nếu muốn gửi khác'}
                  className="mt-1 w-full px-3 py-2 border border-gray-300 rounded-md focus:border-indigo-500 focus:ring-indigo-500"
                />
                <p className="text-xs text-gray-500 mt-1">Nếu để trống, hệ thống sẽ dùng mã sinh viên của tài khoản đang đăng nhập.</p>
              </div>

              <div>
                <label htmlFor="proof" className="block text-sm font-medium text-gray-700">Ảnh minh chứng (tối đa 2MB) *</label>
                <input id="proof" type="file" accept="image/*" onChange={handleImageUpload} className="mt-1 w-full text-sm text-gray-500" />
                {imageData && (
                  <div className="mt-3">
                    <div className="text-xs text-gray-500 mb-1">Xem trước:</div>
                    <img src={imageData} alt="preview" className="max-h-48 rounded-md border" />
                  </div>
                )}
              </div>

              <div className="flex justify-end space-x-3 pt-4">
                <button type="button" onClick={handleClose} className="px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300">Hủy</button>
                <button type="submit" disabled={isSubmitting} className="px-4 py-2 text-white rounded-md hover:opacity-90 disabled:opacity-50" style={{ backgroundColor: config.accent_color }}>
                  {isSubmitting ? 'Đang gửi...' : 'Xác nhận Điểm danh'}
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div className="space-y-6 fade-in p-4 sm:p-6 lg:p-8">
      <div>
        <h1 className="text-3xl font-bold" style={{ color: config.text_color }}>Điểm Danh Hoạt Động Tham Dự</h1>
        <p className="text-gray-500 mt-1">Chỉ hiển thị các hoạt động bạn đã đăng ký tham dự (và đã được duyệt) và có yêu cầu điểm danh.</p>
      </div>

      <div className="bg-white rounded-lg shadow-md overflow-hidden p-6">
        {activitiesForAttendance.length === 0 ? (
          <div className="text-center py-8 text-gray-500">Không có hoạt động nào cần điểm danh tại thời điểm này.</div>
        ) : (
          <div className="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
            {activitiesForAttendance.map((hdtd) => {
              const attendance = hdtd.attendance;
              const isAttended = !!attendance;

              return (
                <div key={hdtd.id_hd_tham_du} className="bg-white border rounded-lg shadow-xl p-5 flex flex-col justify-between hover:shadow-2xl transition duration-300">
                  <div>
                    <h3 className="text-xl font-bold text-gray-900 mb-2">{hdtd.ten_hd}</h3>
                    <div className="text-xs text-gray-500 mb-4">ID Hoạt động: {hdtd.id_hd_tham_du}</div>

                    {isAttended && (
                      <div className={`mt-2 px-3 py-1 inline-flex text-sm font-semibold rounded-full border ${getTrangThaiColor(attendance.trang_thai)}`}>
                        {getTrangThaiText(attendance.trang_thai)}
                      </div>
                    )}

                    {attendance?.thoi_gian && (
                      <div className="text-xs text-gray-600 mt-2">Thời gian điểm danh: {new Date(attendance.thoi_gian).toLocaleString('vi-VN')}</div>
                    )}
                    {attendance?.anh_minh_chung && (
                      <div className="text-xs text-gray-400 mt-1 truncate">Minh chứng: {attendance.anh_minh_chung}</div>
                    )}

                  </div>

                  <div className="mt-4 flex justify-end space-x-2">
                    {isAttended ? (
                      <>
                        {attendance.trang_thai !== 1 && (
                          <button onClick={() => handleCancelDiemDanh(attendance.id)} className="px-3 py-1 text-sm bg-red-50 text-red-700 rounded-md hover:bg-red-100 transition">Hủy Điểm danh</button>
                        )}
                        <a href={attendance.anh_minh_chung} target="_blank" rel="noopener noreferrer" className="px-3 py-1 text-sm bg-blue-50 text-blue-700 rounded-md hover:bg-blue-100 transition">Xem Minh chứng</a>
                      </>
                    ) : (
                      <button onClick={() => { setSelectedHdtd(hdtd); setShowDiemDanhModal(true); }} className="px-4 py-2 text-white font-medium rounded-md hover:opacity-90 transition shadow-lg" style={{ backgroundColor: config.accent_color }}>Điểm Danh</button>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        )}
      </div>

      <AttendanceModal isOpen={showDiemDanhModal} onClose={() => setShowDiemDanhModal(false)} activity={selectedHdtd} />
    </div>
  );
}