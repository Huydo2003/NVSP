/**
 * GiangVienManagement.jsx - Quản lý giảng viên
 * 
 * Chức năng:
 * - Xem danh sách giảng viên
 * - Thêm giảng viên mới
 * - Sửa thông tin giảng viên
 * - Xóa giảng viên
 * - Gán khoa cho giảng viên
 */

import { useState, useEffect } from 'react';
import { useApp } from '../hooks/useApp';
import Modal from './Modal';
import { fetchGiangVien, createGiangVien, updateGiangVien, deleteGiangVien } from '../services/giang-vien';
import { fetchUsers } from '../services/users';
import toast from 'react-hot-toast';
import ConfirmDialog from './ConfirmDialog';

export default function GiangVienManagement({ user }) {
  const [giangViens, setGiangViens] = useState([]);
  const [userAccounts, setUserAccounts] = useState([]);
  const [page, setPage] = useState(1);
  const itemsPerPage = 10;
  const [showModal, setShowModal] = useState(false);
  const [editingGiangVien, setEditingGiangVien] = useState(null);
  const [loading, setLoading] = useState(false);
  const [formData, setFormData] = useState({
    ma_giang_vien: '',
    khoa: ''
  });
  const [confirm, setConfirm] = useState({ isOpen: false, title: '', message: '', onConfirm: null, confirmText: 'Đồng ý', cancelText: 'Hủy' });

  const { state } = useApp();
  const { config } = state;

  // Load giảng viên list and user accounts
  useEffect(() => {
    let mounted = true;

    (async () => {
      try {
        // Only admin can manage giang_vien and fetch users
        if (!user || String(user.role || '').toLowerCase() !== 'admin') {
          // clear lists if not admin
          if (mounted) {
            setGiangViens([]);
            setUserAccounts([]);
          }
          return;
        }

        const [gvList, userList] = await Promise.all([
          fetchGiangVien(),
          fetchUsers()
        ]);

        if (mounted) {
          setGiangViens(Array.isArray(gvList) ? gvList : []);
          setUserAccounts(Array.isArray(userList) ? userList : []);
        }
      } catch (err) {
        console.error('Failed to load giảng viên or users:', err);
        toast.error('Không thể tải danh sách giảng viên hoặc tài khoản');
        if (mounted) {
          setGiangViens([]);
          setUserAccounts([]);
        }
      }
    })();

    return () => { mounted = false; };
  }, [user]);

  const refreshGiangViens = async () => {
    try {
      const gvList = await fetchGiangVien();
      if (gvList) setGiangViens(gvList);
    } catch (err) {
      console.error('refreshGiangViens error:', err);
    }
  };

  // Get available users (not already registered as giảng viên)
  const getAvailableUsers = () => {
    return (userAccounts || []).filter(u => {
      // Source: tai_khoan.loai_tk must be exactly 'Giảng viên' after normalization
      const raw = String(u.loai_tk ?? u.role ?? '');
      const lower = raw.toLowerCase();
      // remove diacritics using NFD decomposition and stripping combining marks
      const noDiacritics = lower.normalize ? lower.normalize('NFD').replace(/[\u0300-\u036f]/g, '') : lower.replace(/[\u0300-\u036f]/g, '');
      const compact = noDiacritics.replace(/\s+/g, '');
      const isGiangVien = compact === 'giangvien';
      // exclude users already present in giang_vien table
      const alreadyExists = (giangViens || []).some(gv => String(gv.ma_giang_vien) === String(u.ma_ca_nhan));
      return isGiangVien && !alreadyExists;
    });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);

    try {
      if (user && String(user.role || '').toLowerCase() === 'admin') {
        if (editingGiangVien) {
          // Update
          const body = {};
          if (formData.khoa !== undefined) body.khoa = formData.khoa || null;

          await updateGiangVien(editingGiangVien.ma_giang_vien, body);
          await refreshGiangViens();
          toast.success('Cập nhật giảng viên thành công');
        } else {
          // Create
          if (!formData.ma_giang_vien) {
            toast.error('Vui lòng chọn giảng viên');
            setLoading(false);
            return;
          }

          const payload = {
            ma_giang_vien: formData.ma_giang_vien,
            khoa: formData.khoa || null
          };

          await createGiangVien(payload);
          await refreshGiangViens();
          toast.success('Thêm giảng viên thành công');
        }
      } else {
        toast.error('Chỉ quản trị viên mới có thể quản lý giảng viên');
      }

      setShowModal(false);
      setEditingGiangVien(null);
      setFormData({ ma_giang_vien: '', khoa: '' });
    } catch (err) {
      console.error('handleSubmit error:', err);
      if (err && err.body && typeof err.body === 'object' && err.body.message) {
        toast.error(err.body.message);
      } else if (err && err.message && (err.message.includes('đã tồn tại') || err.message.includes('không tồn tại'))) {
        toast.error(err.message);
      } else {
        toast.error((err && err.message) || 'Có lỗi xảy ra!');
      }
    }

    setLoading(false);
  };

  const handleEdit = (giangVien) => {
    setEditingGiangVien(giangVien);
    setFormData({
      ma_giang_vien: giangVien.ma_giang_vien,
      khoa: giangVien.khoa || ''
    });
    setShowModal(true);
  };

  const handleDelete = async (giangVien) => {
    setConfirm({
      isOpen: true,
      title: 'Xóa giảng viên',
      message: `Bạn có chắc chắn muốn xóa giảng viên "${giangVien.ho_ten}"? Đây là thao tác không thể hoàn tác.`,
      confirmText: 'Xóa',
      cancelText: 'Hủy',
      onConfirm: async () => {
        setLoading(true);
        try {
          if (user && String(user.role || '').toLowerCase() === 'admin') {
            await deleteGiangVien(giangVien.ma_giang_vien);
            await refreshGiangViens();
            toast.success('Đã xóa giảng viên');
          } else {
            toast.error('Chỉ quản trị viên mới có thể xóa giảng viên');
          }
        } catch (err) {
          console.error('Delete error:', err);
          if (err && err.body && err.body.message) {
            toast.error(err.body.message);
          } else {
            toast.error((err && err.message) || 'Có lỗi xảy ra khi xóa giảng viên!');
          }
        } finally {
          setLoading(false);
        }
      }
    });
  };

  return (
    <div className="space-y-6 fade-in">
      <ConfirmDialog
        isOpen={confirm.isOpen}
        title={confirm.title}
        message={confirm.message}
        confirmText={confirm.confirmText}
        cancelText={confirm.cancelText}
        onConfirm={confirm.onConfirm}
        onCancel={() => setConfirm({ ...confirm, isOpen: false, onConfirm: null })}
      />

      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold" style={{ color: config.text_color }}>
          Quản lý giảng viên
        </h1>
        <div className="flex items-center space-x-3">
          <button
            onClick={() => {
              setShowModal(true);
              setEditingGiangVien(null);
              setFormData({ ma_giang_vien: '', khoa: '' });
            }}
            className="px-4 py-2 text-white rounded-lg hover:opacity-90 transition-opacity"
            style={{ backgroundColor: config.accent_color }}
          >
            Thêm giảng viên
          </button>
        </div>
      </div>

      <div className="bg-white rounded-lg shadow-md overflow-hidden">
        <div className="overflow-x-auto">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">STT</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã GV</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Họ tên</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khoa</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Thao tác</th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-200">
              {giangViens.slice((page - 1) * itemsPerPage, page * itemsPerPage).map((gv, idx) => (
                <tr key={gv.ma_giang_vien} className="hover:bg-gray-50">
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{(page - 1) * itemsPerPage + idx + 1}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{gv.ma_giang_vien}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{gv.ho_ten}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{gv.email || '-'}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{gv.khoa || '-'}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <button onClick={() => handleEdit(gv)} className="text-blue-600 hover:text-blue-900">Sửa</button>
                    <button onClick={() => handleDelete(gv)} className="text-red-600 hover:text-red-900">Xóa</button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
          {giangViens.length === 0 && (
            <div className="text-center py-8 text-gray-500">
              Chưa có giảng viên nào
            </div>
          )}
          {/* Pagination controls */}
          {giangViens.length > itemsPerPage && (
            <div className="flex items-center justify-center space-x-3 py-4">
              <button onClick={() => setPage(p => Math.max(1, p - 1))} className="px-3 py-1 bg-gray-100 rounded">Prev</button>
              {Array.from({ length: Math.ceil(giangViens.length / itemsPerPage) }).map((_, idx) => (
                <button key={idx} onClick={() => setPage(idx + 1)} className={`px-3 py-1 rounded ${page === idx + 1 ? 'bg-blue-500 text-white' : 'bg-gray-100'}`}>{idx + 1}</button>
              ))}
              <button onClick={() => setPage(p => Math.min(Math.ceil(giangViens.length / itemsPerPage), p + 1))} className="px-3 py-1 bg-gray-100 rounded">Next</button>
            </div>
          )}
        </div>
      </div>

      <Modal
        isOpen={showModal}
        onClose={() => {
          setShowModal(false);
          setEditingGiangVien(null);
          setFormData({ ma_giang_vien: '', khoa: '' });
        }}
        title={editingGiangVien ? 'Chỉnh sửa giảng viên' : 'Thêm giảng viên mới'}
        size="md"
      >
        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Giảng viên *
            </label>
            <select
              required={!editingGiangVien}
              value={formData.ma_giang_vien}
              onChange={(e) => setFormData({ ...formData, ma_giang_vien: e.target.value })}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              disabled={!!editingGiangVien}
            >
              <option value="">-- Chọn giảng viên --</option>
              {editingGiangVien ? (
                // When editing, show the selected giảng viên (name from giangViens if available)
                <option value={editingGiangVien.ma_giang_vien}>{editingGiangVien.ho_ten || editingGiangVien.ma_giang_vien} ({editingGiangVien.ma_giang_vien})</option>
              ) : (
                // List users from tai_khoan where loai_tk == 'Giảng viên' (display name, value = ma_ca_nhan)
                getAvailableUsers().length > 0 ? (
                  getAvailableUsers().map(u => (
                    <option key={u.ma_ca_nhan} value={u.ma_ca_nhan}>
                      {u.ho_ten} ({u.ma_ca_nhan})
                    </option>
                  ))
                ) : (
                  <option value="" disabled>Không có tài khoản Giảng viên khả dụng</option>
                )
              )}
            </select>
          </div>

          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Khoa
            </label>
            <input
              type="text"
              value={formData.khoa}
              onChange={(e) => setFormData({ ...formData, khoa: e.target.value })}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Nhập tên khoa"
            />
          </div>

          <div className="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              onClick={() => setShowModal(false)}
              className="px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300"
            >
              Hủy
            </button>
            <button
              type="submit"
              disabled={loading}
              className="px-4 py-2 text-white rounded-md hover:opacity-90 disabled:opacity-50"
              style={{ backgroundColor: config.accent_color }}
            >
              {loading ? 'Đang xử lý...' : (editingGiangVien ? 'Cập nhật' : 'Thêm giảng viên')}
            </button>
          </div>
        </form>
      </Modal>
    </div>
  );
}
