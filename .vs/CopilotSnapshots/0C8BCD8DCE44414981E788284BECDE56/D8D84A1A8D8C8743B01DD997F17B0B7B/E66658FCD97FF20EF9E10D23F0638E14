/**
 * giang-vien.js - Service for giảng viên (teacher) API
 * 
 * Provides CRUD operations for giảng viên management
 */

import { apiFetch } from './api';

export async function fetchGiangVien() {
  try {
    const response = await apiFetch('/api/giang_vien', {
      method: 'GET'
    });
    if (!response.ok) {
      const errBody = await response.json();
      throw new Error(errBody.message || 'Lỗi khi lấy danh sách giảng viên');
    }
    return await response.json();
  } catch (err) {
    console.error('fetchGiangVien error:', err);
    throw err;
  }
}

export async function fetchGiangVienById(ma_giang_vien) {
  try {
    const response = await apiFetch(`/api/giang_vien/${ma_giang_vien}`, {
      method: 'GET'
    });
    if (!response.ok) {
      const errBody = await response.json();
      throw new Error(errBody.message || 'Lỗi khi lấy thông tin giảng viên');
    }
    return await response.json();
  } catch (err) {
    console.error('fetchGiangVienById error:', err);
    throw err;
  }
}

export async function createGiangVien(payload) {
  try {
    const response = await apiFetch('/api/giang_vien', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(payload)
    });
    if (!response.ok) {
      const errBody = await response.json();
      throw new Error(errBody.message || 'Lỗi khi tạo giảng viên');
    }
    return await response.json();
  } catch (err) {
    console.error('createGiangVien error:', err);
    throw err;
  }
}

export async function updateGiangVien(ma_giang_vien, payload) {
  try {
    const response = await apiFetch(`/api/giang_vien/${ma_giang_vien}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify(payload)
    });
    if (!response.ok) {
      const errBody = await response.json();
      throw new Error(errBody.message || 'Lỗi khi cập nhật giảng viên');
    }
    return await response.json();
  } catch (err) {
    console.error('updateGiangVien error:', err);
    throw err;
  }
}

export async function deleteGiangVien(ma_giang_vien) {
  try {
    const response = await apiFetch(`/api/giang_vien/${ma_giang_vien}`, {
      method: 'DELETE'
    });
    if (!response.ok) {
      const errBody = await response.json();
      throw new Error(errBody.message || 'Lỗi khi xóa giảng viên');
    }
    return await response.json();
  } catch (err) {
    console.error('deleteGiangVien error:', err);
    throw err;
  }
}
