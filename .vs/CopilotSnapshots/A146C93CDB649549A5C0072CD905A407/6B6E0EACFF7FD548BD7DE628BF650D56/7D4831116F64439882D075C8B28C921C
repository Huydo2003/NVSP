import { useState, useEffect } from 'react';
import { useApp } from '../hooks/useApp';
import Modal from './Modal';
import { fetchCertificates, createCertificate, updateCertificate, deleteCertificate } from '../services/certificates';

export default function CertificateTypeManagement() {
  const { state } = useApp();
  const { config } = state;
  const [types, setTypes] = useState([]);
  const [editing, setEditing] = useState(null);
  const [showModal, setShowModal] = useState(false);
  const [loading, setLoading] = useState(false);
  const [form, setForm] = useState({ 
    Id_loaiCN: '',
    tenloaiCN: '' 
  });

  useEffect(() => {
    loadTypes();
  }, []);

  const loadTypes = async () => {
    try {
      setLoading(true);
      const data = await fetchCertificates();
      setTypes(data || []);
    } catch (err) {
      console.error('Lỗi tải loại chứng nhận:', err);
      alert('Không thể tải danh sách loại chứng nhận');
    } finally {
      setLoading(false);
    }
  };

  const openCreate = () => {
    setEditing(null);
    setForm({ Id_loaiCN: '', tenloaiCN: '' });
    setShowModal(true);
  };

  const openEdit = (t) => {
    setEditing(t);
    setForm({ 
      Id_loaiCN: t.Id_loaiCN || '',
      tenloaiCN: t.tenloaiCN || '' 
    });
    setShowModal(true);
  };

  const handleSave = async (e) => {
    e.preventDefault();
    setLoading(true);

    try {
      if (editing) {
        await updateCertificate(editing.Id_loaiCN, { tenloaiCN: form.tenloaiCN });
        setTypes(prev => prev.map(p => p.Id_loaiCN === editing.Id_loaiCN 
          ? { ...p, tenloaiCN: form.tenloaiCN } 
          : p
        ));
        alert('Cập nhật loại chứng nhận thành công');
      } else {
        const newType = await createCertificate({ tenloaiCN: form.tenloaiCN });
        setTypes(prev => [newType, ...prev]);
        alert('Tạo loại chứng nhận thành công');
      }
      setShowModal(false);
    } catch (err) {
      console.error(err);
      alert('Có lỗi xảy ra');
    } finally {
      setLoading(false);
    }
  };

  const handleDelete = async (t) => {
    if (!window.confirm('Bạn có chắc chắn muốn xóa loại chứng nhận này?')) {
      return;
    }

    try {
      setLoading(true);
      await deleteCertificate(t.Id_loaiCN);
      setTypes(prev => prev.filter(p => p.Id_loaiCN !== t.Id_loaiCN));
      alert('Đã xóa loại chứng nhận');
    } catch (err) {
      console.error(err);
      alert('Lỗi khi xóa');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="space-y-6">
      <div className="flex justify-between items-center">
        <h1 className="text-2xl font-bold" style={{ color: config.text_color }}>
          Loại Chứng Nhận
        </h1>
        <button 
          onClick={openCreate} 
          className="px-4 py-2 text-white rounded-md hover:opacity-90"
          style={{ backgroundColor: config.primary_color }}
        >
          + Thêm loại chứng nhận
        </button>
      </div>

      <div className="bg-white rounded-lg shadow-md overflow-hidden">
        <div className="overflow-x-auto">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  ID
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Tên Loại Chứng Nhận
                </th>
                <th className="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Thao Tác
                </th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-200">
              {loading ? (
                <tr>
                  <td colSpan="3" className="px-6 py-4 text-center text-gray-500">
                    Đang tải...
                  </td>
                </tr>
              ) : types.length === 0 ? (
                <tr>
                  <td colSpan="3" className="px-6 py-4 text-center text-gray-500">
                    Chưa có loại chứng nhận nào
                  </td>
                </tr>
              ) : (
                types.map(t => (
                  <tr key={t.Id_loaiCN} className="hover:bg-gray-50">
                    <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {t.Id_loaiCN}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {t.tenloaiCN}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                      <button 
                        onClick={() => openEdit(t)} 
                        className="text-indigo-600 hover:text-indigo-900 hover:underline"
                      >
                        Sửa
                      </button>
                      <button 
                        onClick={() => handleDelete(t)} 
                        className="text-red-600 hover:text-red-900 hover:underline"
                      >
                        Xóa
                      </button>
                    </td>
                  </tr>
                ))
              )}
            </tbody>
          </table>
        </div>
      </div>

      <Modal 
        isOpen={showModal} 
        onClose={() => setShowModal(false)} 
        title={editing ? 'Chỉnh sửa loại chứng nhận' : 'Thêm loại chứng nhận mới'}
      >
        <form onSubmit={handleSave} className="space-y-4">
          {editing && (
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                ID Loại Chứng Nhận
              </label>
              <input 
                type="text"
                disabled
                value={form.Id_loaiCN}
                className="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100"
              />
            </div>
          )}
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Tên Loại Chứng Nhận *
            </label>
            <input 
              required
              value={form.tenloaiCN}
              onChange={e => setForm({ ...form, tenloaiCN: e.target.value })}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Nhập tên loại chứng nhận"
            />
          </div>
          <div className="flex justify-end space-x-3 pt-4 border-t">
            <button 
              type="button" 
              onClick={() => setShowModal(false)} 
              className="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
            >
              Hủy
            </button>
            <button 
              type="submit" 
              disabled={loading}
              style={{ backgroundColor: config.primary_color }}
              className="px-4 py-2 text-white rounded-md hover:opacity-90 disabled:opacity-50"
            >
              {loading ? 'Đang xử lý...' : (editing ? 'Cập nhật' : 'Thêm')}
            </button>
          </div>
        </form>
      </Modal>
    </div>
  );
}
