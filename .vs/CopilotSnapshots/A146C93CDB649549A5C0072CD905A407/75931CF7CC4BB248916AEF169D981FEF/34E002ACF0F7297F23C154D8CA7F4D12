/**
 * EventManagement.jsx - Quản lý sự kiện
 * 
 * Chức năng:
 * - Xem danh sách sự kiện
 * - Tạo/chỉnh sửa/xóa sự kiện
 * - Quản lý trạng thái sự kiện
 * - Theo dõi số lượng tham gia
 */

import { useState, useEffect } from 'react';
import { useApp } from '../hooks/useApp';
import { generateId, formatDate } from '../utils/config';
import Modal from './Modal';
import { fetchEvents, createEvent, updateEvent, deleteEvent, fetchEventTypes } from '../services/events';
import toast from 'react-hot-toast';

export default function EventManagement({ user }) {
  // Danh sách sự kiện từ dataSdk or API
  const [events, setEvents] = useState([]);
  const [page, setPage] = useState(1);
  const itemsPerPage = 10;
  // Điều khiển hiển thị modal form
  const [showModal, setShowModal] = useState(false);
  // Lưu sự kiện đang chỉnh sửa
  const [editingEvent, setEditingEvent] = useState(null);
  // Trạng thái loading khi thao tác
  const [loading, setLoading] = useState(false);
  // Dữ liệu form thêm/sửa sự kiện
  const [formData, setFormData] = useState({
    title: '',
    description: '',
    startDate: '',
    endDate: '',
    location: '',
    maxParticipants: '',
    status: 'draft'
  });
  const [eventTypes, setEventTypes] = useState([]);
  const [hinhThucDkOptions] = useState([
    { value: null, label: 'Mặc định' },
    { value: 'online', label: 'Trực tuyến' },
    { value: 'offline', label: 'Trực tiếp' },
    { value: 'hybrid', label: 'Kết hợp' }
  ]);

  const { state } = useApp();
  const { data, config } = state;

  useEffect(() => {
    let mounted = true;

    const loadFromApi = async () => {
      try {
        const apiEvents = await fetchEvents();
        if (!apiEvents) return false;
        if (!mounted) return true;
        // map dates for input (YYYY-MM-DD)
        const mapped = apiEvents.map(e => ({
          id: e.id,
          type: 'event',
          title: e.title,
          description: e.description || '',
          startDate: e.startDate ? (new Date(e.startDate)).toISOString().slice(0, 10) : '',
          endDate: e.endDate ? (new Date(e.endDate)).toISOString().slice(0, 10) : '',
          location: e.location || '',
          maxParticipants: e.maxParticipants || 0,
          currentParticipants: e.currentParticipants || 0,
          status: e.status || 'draft',
          eventId: e.eventId || null,
          hinhThucDk: e.hinhThucDk || null,
          isCompetition: e.isCompetition || false,
          createdBy: '',
          createdAt: e.createdAt || new Date().toISOString(),
          updatedAt: e.updatedAt || new Date().toISOString(),
          data: JSON.stringify({})
        }));
        setEvents(mapped);
        return true;
      } catch (err) {
        return false;
      }
    };

    const initLocal = () => {
      const eventsFromData = data.filter(item => item.type === 'event');
      if (eventsFromData.length === 0) {
        const demo = Array.from({ length: 20 }).map((_, i) => ({
          id: `demo-event-${i + 1}`,
          type: 'event',
          title: `Sự kiện demo ${i + 1}`,
          description: `Mô tả demo ${i + 1}`,
          startDate: new Date().toISOString(),
          endDate: new Date().toISOString(),
          location: `Địa điểm ${i + 1}`,
          maxParticipants: 100,
          currentParticipants: 0,
          status: 'draft',
          eventId: null,
          hinhThucDk: null,
          isCompetition: false,
          createdBy: 'system',
          createdAt: new Date().toISOString(),
          updatedAt: new Date().toISOString(),
          data: '{}'
        }));
        setEvents(demo);
      } else {
        setEvents(eventsFromData);
      }
    };

    (async () => {
      // If admin or BTC, try API first
      if (user && (user.role === 'admin' || user.role === 'btc')) {
        const ok = await loadFromApi();
        if (!ok && mounted) initLocal();
      } else {
        initLocal();
      }
    })();

    return () => { mounted = false; };
  }, [data, user]);

  useEffect(() => {
    // fetch event types for select
    const loadTypes = async () => {
      try {
        const types = await fetchEventTypes();
        if (types && Array.isArray(types)) setEventTypes(types);
      } catch {
        setEventTypes([]);
      }
    };
    loadTypes();
  }, []);

  const refreshApiEvents = async () => {
    try {
      const apiEvents = await fetchEvents();
      if (!apiEvents) return;
      const mapped = apiEvents.map(e => ({
        id: e.id,
        type: 'event',
        title: e.title,
        description: e.description || '',
        startDate: e.startDate ? (new Date(e.startDate)).toISOString().slice(0, 10) : '',
        endDate: e.endDate ? (new Date(e.endDate)).toISOString().slice(0, 10) : '',
        location: e.location || '',
        maxParticipants: e.maxParticipants || 0,
        currentParticipants: e.currentParticipants || 0,
        status: e.status || 'draft',
        eventId: e.eventId || null,
        hinhThucDk: e.hinhThucDk || null,
        isCompetition: e.isCompetition || false,
        createdBy: '',
        createdAt: e.createdAt || new Date().toISOString(),
        updatedAt: e.updatedAt || new Date().toISOString(),
        data: JSON.stringify({})
      }));
      setEvents(mapped);
    } catch (err) {
      // ignore
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);

    // prepare payload for API or local
    const payload = {
      title: formData.title,
      description: formData.description,
      startDate: formData.startDate || null,
      endDate: formData.endDate || null,
      location: formData.location,
      maxParticipants: parseInt(formData.maxParticipants) || 0,
      status: formData.status,
      hinhThucDk: formData.hinhThucDk || null,
      eventId: formData.eventId || null,
      isCompetition: formData.isCompetition || false
    };

    try {
      if (user && (user.role === 'admin' || user.role === 'btc')) {
        if (editingEvent) {
          await updateEvent(editingEvent.id, payload);
          await refreshApiEvents();
          toast.success('Cập nhật sự kiện thành công');
        } else {
          if (data.length >= 999) {
            toast.error('Đã đạt giới hạn tối đa 999 bản ghi. Vui lòng xóa một số dữ liệu trước!');
            setLoading(false);
            return;
          }
          await createEvent(payload);
          await refreshApiEvents();
          toast.success('Tạo sự kiện thành công');
        }
      } else {
        // fallback to local SDK
        const eventData = {
          id: editingEvent?.id || generateId(),
          type: 'event',
          title: formData.title,
          description: formData.description,
          startDate: formData.startDate || new Date().toISOString(),
          endDate: formData.endDate || new Date().toISOString(),
          location: formData.location,
          maxParticipants: parseInt(formData.maxParticipants) || 0,
          currentParticipants: editingEvent?.currentParticipants || 0,
          status: formData.status,
          createdBy: user.id,
          createdAt: editingEvent?.createdAt || new Date().toISOString(),
          updatedAt: new Date().toISOString(),
          hinhThucDk: formData.hinhThucDk || null,
          eventId: formData.eventId || null,
          isCompetition: formData.isCompetition || false,
          data: JSON.stringify(payload)
        };

        if (editingEvent) {
          const result = await window.dataSdk.update(eventData);
          if (!result.isOk) toast.error('Có lỗi xảy ra khi cập nhật sự kiện!');
          else toast.success('Cập nhật sự kiện thành công');
        } else {
          if (data.length >= 999) {
            toast.error('Đã đạt giới hạn tối đa 999 bản ghi. Vui lòng xóa một số dữ liệu trước!');
            setLoading(false);
            return;
          }
          const result = await window.dataSdk.create(eventData);
          if (!result.isOk) toast.error('Có lỗi xảy ra khi tạo sự kiện!');
          else toast.success('Tạo sự kiện thành công');
        }
      }

      setShowModal(false);
      setEditingEvent(null);
      setFormData({
        title: '',
        description: '',
        startDate: '',
        endDate: '',
        location: '',
        maxParticipants: '',
        status: 'draft'
      });
    } catch (err) {
      console.error(err);
      toast.error('Có lỗi xảy ra!');
    }

    setLoading(false);
  };

  const handleEdit = (event) => {
    setEditingEvent(event);
    // Ensure dates are in YYYY-MM-DD for input
    const start = event.startDate ? (new Date(event.startDate)).toISOString().slice(0, 10) : '';
    const end = event.endDate ? (new Date(event.endDate)).toISOString().slice(0, 10) : '';
    setFormData({
      title: event.title,
      description: event.description || '',
      startDate: start,
      endDate: end,
      location: event.location || '',
      maxParticipants: event.maxParticipants?.toString() || '',
      status: event.status || 'draft',
      hinhThucDk: event.hinhThucDk || null,
      eventId: event.eventId || null,
      isCompetition: event.isCompetition || false
    });
    setShowModal(true);
  };

  const handleDelete = async (eventItem) => {
    if (!window.confirm('Bạn có chắc chắn muốn xóa sự kiện này? Đây là thao tác không thể hoàn tác.')) return;

    setLoading(true);
    try {
      if (user && (user.role === 'admin' || user.role === 'btc')) {
        await deleteEvent(eventItem.id);
        await refreshApiEvents();
        toast.success('Đã xóa sự kiện');
      } else {
        const result = await window.dataSdk.delete(eventItem);
        if (!result.isOk) toast.error('Có lỗi xảy ra khi xóa sự kiện!');
        else toast.success('Đã xóa sự kiện');
      }
    } catch (err) {
      console.error(err);
      toast.error('Có lỗi xảy ra khi xóa sự kiện!');
    }
    setLoading(false);
  };

  const handleStatusChange = async (eventItem, newStatus) => {
    setLoading(true);
    try {
      if (user && (user.role === 'admin' || user.role === 'btc')) {
        // send status change to server; server will keep dates if provided
        await updateEvent(eventItem.id, { status: newStatus, startDate: eventItem.startDate || null, endDate: eventItem.endDate || null });
        await refreshApiEvents();
      } else {
        const updatedEvent = { ...eventItem, status: newStatus, updatedAt: new Date().toISOString() };
        const result = await window.dataSdk.update(updatedEvent);
        if (!result.isOk) toast.error('Có lỗi xảy ra khi cập nhật trạng thái!');
      }
    } catch (err) {
      console.error(err);
      toast.error('Có lỗi xảy ra khi cập nhật trạng thái!');
    }
    setLoading(false);
  };

  return (
    <div className="space-y-6 fade-in">
      <div className="flex items-center justify-between">
        <h1 className="text-3xl font-bold" style={{ color: config.text_color }}>
          Quản lý sự kiện NVSP
        </h1>
        <button
          onClick={() => setShowModal(true)}
          className="px-4 py-2 text-white rounded-lg hover:opacity-90 transition-opacity"
          style={{ backgroundColor: config.primary_color }}
        >
          + Tạo sự kiện mới
        </button>
      </div>

      <div className="bg-white rounded-lg shadow-md overflow-hidden">
        <div className="overflow-x-auto">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Sự kiện
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Thời gian
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Địa điểm
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Thí sinh
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Trạng thái
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Loại sự kiện
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Hình thức
                </th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Thao tác
                </th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-200">
              {events.slice((page - 1) * itemsPerPage, page * itemsPerPage).map(event => (
                <tr key={event.id} className="hover:bg-gray-50">
                  <td className="px-6 py-4 whitespace-nowrap">
                    <div>
                      <div className="text-sm font-medium text-gray-900">
                        {event.title}
                      </div>
                      <div className="text-sm text-gray-500">
                        {event.description}
                      </div>
                    </div>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <div>{formatDate(event.startDate)}</div>
                    <div className="text-gray-500">đến {formatDate(event.endDate)}</div>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {event.location}
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {event.currentParticipants}/{event.maxParticipants}
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap">
                    <select
                      value={event.status}
                      onChange={(e) => handleStatusChange(event, e.target.value)}
                      className="text-sm border rounded px-2 py-1"
                      disabled={loading}
                    >
                      <option value="draft">Nháp</option>
                      <option value="open">Mở đăng ký</option>
                      <option value="closed">Đóng đăng ký</option>
                      <option value="completed">Hoàn thành</option>
                    </select>
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {event.eventId ? eventTypes.find(t => t.id === event.eventId)?.name : 'N/A'}
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    {event.hinhThucDk ? hinhThucDkOptions.find(o => o.value === event.hinhThucDk)?.label : 'Mặc định'}
                  </td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <button
                      onClick={() => handleEdit(event)}
                      className="text-indigo-600 hover:text-indigo-900"
                    >
                      Sửa
                    </button>
                    <button
                      onClick={() => handleDelete(event)}
                      className="text-red-600 hover:text-red-900"
                      disabled={loading}
                    >
                      Xóa
                    </button>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
          {events.length === 0 && (
            <div className="text-center py-8 text-gray-500">
              Chưa có sự kiện nào. Hãy tạo sự kiện đầu tiên!
            </div>
          )}
          {events.length > itemsPerPage && (
            <div className="flex items-center justify-center space-x-3 py-4">
              <button onClick={() => setPage(p => Math.max(1, p - 1))} className="px-3 py-1 bg-gray-100 rounded">Prev</button>
              {Array.from({ length: Math.ceil(events.length / itemsPerPage) }).map((_, idx) => (
                <button key={idx} onClick={() => setPage(idx + 1)} className={`px-3 py-1 rounded ${page === idx + 1 ? 'bg-blue-500 text-white' : 'bg-gray-100'}`}>{idx + 1}</button>
              ))}
              <button onClick={() => setPage(p => Math.min(Math.ceil(events.length / itemsPerPage), p + 1))} className="px-3 py-1 bg-gray-100 rounded">Next</button>
            </div>
          )}
        </div>
      </div>

      <Modal
        isOpen={showModal}
        onClose={() => {
          setShowModal(false);
          setEditingEvent(null);
          setFormData({
            title: '',
            description: '',
            startDate: '',
            endDate: '',
            location: '',
            maxParticipants: '',
            status: 'draft'
          });
        }}
        title={editingEvent ? 'Chỉnh sửa sự kiện' : 'Tạo sự kiện mới'}
        size="lg"
      >
        <form onSubmit={handleSubmit} className="space-y-4">
          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Tên sự kiện *
              </label>
              <input
                type="text"
                required
                value={formData.title}
                onChange={(e) => setFormData({...formData, title: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="Nhập tên sự kiện"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Địa điểm *
              </label>
              <input
                type="text"
                required
                value={formData.location}
                onChange={(e) => setFormData({...formData, location: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="Nhập địa điểm"
              />
            </div>
          </div>
          
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">
              Mô tả
            </label>
            <textarea
              value={formData.description}
              onChange={(e) => setFormData({...formData, description: e.target.value})}
              rows={3}
              className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Nhập mô tả sự kiện"
            />
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Ngày bắt đầu *
              </label>
              <input
                type="date"
                required
                value={formData.startDate}
                onChange={(e) => setFormData({...formData, startDate: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Ngày kết thúc *
              </label>
              <input
                type="date"
                required
                value={formData.endDate}
                onChange={(e) => setFormData({...formData, endDate: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              />
            </div>
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Số lượng thí sinh tối đa
              </label>
              <input
                type="number"
                min="1"
                value={formData.maxParticipants}
                onChange={(e) => setFormData({...formData, maxParticipants: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                placeholder="Nhập số lượng"
              />
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Trạng thái
              </label>
              <select
                value={formData.status}
                onChange={(e) => setFormData({...formData, status: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="draft">Nháp</option>
                <option value="open">Mở đăng ký</option>
                <option value="closed">Đóng đăng ký</option>
                <option value="completed">Hoàn thành</option>
              </select>
            </div>
          </div>

          <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Loại sự kiện
              </label>
              <select
                value={formData.eventId || ''}
                onChange={(e) => setFormData({...formData, eventId: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                disabled={loading}
              >
                <option value="">Chọn loại sự kiện</option>
                {eventTypes.map(type => (
                  <option key={type.id} value={type.id}>{type.name}</option>
                ))}
              </select>
            </div>
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">
                Hình thức đăng ký
              </label>
              <select
                value={formData.hinhThucDk || ''}
                onChange={(e) => setFormData({...formData, hinhThucDk: e.target.value})}
                className="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              >
                <option value="">Chọn hình thức</option>
                {hinhThucDkOptions.map(option => (
                  <option key={option.value} value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>
          </div>

          <div className="flex items-center mb-4">
            <input
              type="checkbox"
              checked={formData.isCompetition}
              onChange={(e) => setFormData({...formData, isCompetition: e.target.checked})}
              className="h-4 w-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500"
            />
            <label className="ml-2 block text-sm text-gray-700">
              Đây là sự kiện thi đấu
            </label>
          </div>

          <div className="flex justify-end space-x-3 pt-4">
            <button
              type="button"
              onClick={() => setShowModal(false)}
              className="px-4 py-2 text-gray-700 bg-gray-200 rounded-md hover:bg-gray-300"
            >
              Hủy
            </button>
            <button
              type="submit"
              disabled={loading}
              className="px-4 py-2 text-white rounded-md hover:opacity-90 disabled:opacity-50"
              style={{ backgroundColor: config.primary_color }}
            >
              {loading ? 'Đang xử lý...' : (editingEvent ? 'Cập nhật' : 'Tạo sự kiện')}
            </button>
          </div>
        </form>
      </Modal>
    </div>
  );
}