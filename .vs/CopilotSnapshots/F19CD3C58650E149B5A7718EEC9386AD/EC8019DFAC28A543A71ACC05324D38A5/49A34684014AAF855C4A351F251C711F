import { apiFetch } from './api';

export async function fetchOrganizers() {
  try {
    const res = await apiFetch('/api/organizers');
    return res;
  } catch (err) {
    // return empty array on 404 or other API problems to let UI fallback
    return [];
  }
}

export async function createOrganizer(data) {
  try {
    return await apiFetch('/api/organizers', {
      method: 'POST',
      body: JSON.stringify(data)
    });
  } catch (err) {
    throw err;
  }
}

export async function updateOrganizer(id, data) {
  try {
    return await apiFetch(`/api/organizers/${id}`, {
      method: 'PUT',
      body: JSON.stringify(data)
    });
  } catch (err) {
    throw err;
  }
}

export async function deleteOrganizer(id) {
  try {
    return await apiFetch(`/api/organizers/${id}`, {
      method: 'DELETE'
    });
  } catch (err) {
    throw err;
  }
}
